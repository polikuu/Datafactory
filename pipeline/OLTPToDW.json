											}
										},
										"TableName": {
											"type": "String",
											"value": {
												"value": "@{item().Name}",
												"type": "Expression"
											}
										}
									},
									"queryTimeout": "02:00:00",
									"partitionOption": "None"
								},
								"dataset": {
									"referenceName": "Integration",
									"type": "DatasetReference"
								}
							}
						},
