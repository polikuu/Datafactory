								"retry": 0,
								"retryIntervalInSeconds": 30,
								"secureOutput": false,
								"secureInput": false
							},
							"userProperties": [],
							"linkedServiceName": {
								"referenceName": "DW",
								"type": "LinkedServiceReference"
							},
							"typeProperties": {
								"scripts": [
									{
										"type": "Query",
										"text": {
											"value": "DELETE FROM Integration.@{item().Name}_Staging",
											"type": "Expression"
										}
									}
								]
							}
						},
						{
							"name": "LookupLineageKey",
							"type": "Lookup",
							"dependsOn": [],
