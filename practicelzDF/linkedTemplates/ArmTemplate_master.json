{
	"$schema": "http://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
	"contentVersion": "1.0.0.0",
	"parameters": {
		"factoryName": {
			"type": "string",
			"metadata": "Data Factory name",
			"defaultValue": "practicelzDF"
		},
		"AzureSqlDatabase1_connectionString": {
			"type": "secureString",
			"metadata": "Secure string for 'connectionString' of 'AzureSqlDatabase1'"
		},
		"AzureSqlDatabase2_connectionString": {
			"type": "secureString",
			"metadata": "Secure string for 'connectionString' of 'AzureSqlDatabase2'"
		},
		"AzureSqlDatabase3_connectionString": {
			"type": "secureString",
			"metadata": "Secure string for 'connectionString' of 'AzureSqlDatabase3'"
		},
		"DW_connectionString": {
			"type": "secureString",
			"metadata": "Secure string for 'connectionString' of 'DW'"
		},
		"Integration_connectionString": {
			"type": "secureString",
			"metadata": "Secure string for 'connectionString' of 'Integration'"
		},
		"MovieBlobStorage_connectionString": {
			"type": "secureString",
			"metadata": "Secure string for 'connectionString' of 'MovieBlobStorage'"
		},
		"ODS_connectionString": {
			"type": "secureString",
			"metadata": "Secure string for 'connectionString' of 'ODS'"
		},
		"OLAP_connectionString": {
			"type": "secureString",
			"metadata": "Secure string for 'connectionString' of 'OLAP'"
		},
		"containerUri": {
			"type": "string",
			"metadata": "URI to storage account containing linked ARM templates"
		},
		"containerSasToken": {
			"type": "string",
			"metadata": "Sas token to storage account containing linked ARM templates"
		}
	},
	"variables": {
		"factoryId": "[concat('Microsoft.DataFactory/factories/', parameters('factoryName'))]"
	},
	"resources": [
		{
			"name": "practicelzDF_ArmTemplate_0",
			"type": "Microsoft.Resources/deployments",
			"apiVersion": "2018-02-01",
			"properties": {
				"mode": "incremental",
				"templateLink": {
					"uri": "[concat(parameters('containerUri'), '/ArmTemplate_0.json', parameters('containerSasToken'))]",
					"contentVersion": "1.0.0.0"
				},
				"parameters": {
					"factoryName": {
						"value": "[parameters('factoryName')]"
					},
					"AzureSqlDatabase1_connectionString": {
						"value": "[parameters('AzureSqlDatabase1_connectionString')]"
					},
					"AzureSqlDatabase2_connectionString": {
						"value": "[parameters('AzureSqlDatabase2_connectionString')]"
					},
					"AzureSqlDatabase3_connectionString": {
						"value": "[parameters('AzureSqlDatabase3_connectionString')]"
					},
					"DW_connectionString": {
						"value": "[parameters('DW_connectionString')]"
					},
					"Integration_connectionString": {
						"value": "[parameters('Integration_connectionString')]"
					},
					"MovieBlobStorage_connectionString": {
						"value": "[parameters('MovieBlobStorage_connectionString')]"
					},
					"ODS_connectionString": {
						"value": "[parameters('ODS_connectionString')]"
					},
					"OLAP_connectionString": {
						"value": "[parameters('OLAP_connectionString')]"
					}
				}
			},
			"dependsOn": []
		},
		{
			"name": "practicelzDF_ArmTemplate_1",
			"type": "Microsoft.Resources/deployments",
			"apiVersion": "2018-02-01",
			"properties": {
				"mode": "incremental",
				"templateLink": {
					"uri": "[concat(parameters('containerUri'), '/ArmTemplate_1.json', parameters('containerSasToken'))]",
					"contentVersion": "1.0.0.0"
				},
				"parameters": {
					"factoryName": {
						"value": "[parameters('factoryName')]"
					}
				}
			},
			"dependsOn": [
				"[resourceId('Microsoft.Resources/deployments', 'practicelzDF_ArmTemplate_0')]"
			]
		}
	]
}